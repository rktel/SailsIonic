<ion-view view-title="Chats">
  <ion-content>
    <ion-refresher pulling-text="Pull to refresh..." on-refresh="chats.refresh()">
    </ion-refresher>
    <ion-list>
   
      <ion-item class="item-remove-animate item-avatar item-icon-right" ng-repeat="pet in chats.pets" type="item-text-wrap">
        <!--img ng-src="{{chat.face}}"-->
        <h2 >{{pet.name}}</h2>
        <p>{{pet.id}}</p>
        
        <i class="icon ion-chevron-right icon-accessory"></i>
        <ion-option-button class="button-balanced" ng-click="openModal('{{pet.id}}','{{pet.name}}')">
          Editar
        </ion-option-button>
        <ion-option-button class="button-assertive" ng-click="chats.alert('{{pet.id}}','{{pet.name}}')">
          Eliminar
        </ion-option-button>
        
      </ion-item>
    </ion-list>
  </ion-content>
</ion-view>
