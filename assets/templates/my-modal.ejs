<ion-modal-view>
    <ion-header-bar>
      <h1 class="title">Editar PetFriend: {{petName}}</h1>
    </ion-header-bar>
    <ion-content>
	  <div class="list card">
      
	    <div class="item item-body">
	      <div class="list">
	        <li class="item item-input ">
	          <input type="text" placeholder="New Pet Name" ng-model="newPet">
	            
	        </li>
	        <button class="button button-block button-dark" ng-click="closeModal()">Cerrar Modal</button>
	        <button class="button button-block button-dark" ng-click="alerta(newPet)">Alerta</button>
	          
	      </div>
	    </div>
      </div>
      
    </ion-content>
  </ion-modal-view>



 